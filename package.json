{
    "name": "website-dpsg-wehr",
    "version": "1.7.16",
    "private": true,
    "browserslist": [
        "defaults and supports es6-module",
        "maintained node versions"
    ],
    "scripts": {
        "dev": "TINA_PUBLIC_IS_LOCAL=true tinacms dev --datalayer-port 9005 -c \"next dev\"",
        "build": "tinacms build && tsx scripts/generate-ics.ts && tsx scripts/generate-search-index.ts && next build",
        "build:ci": "tinacms build --local --skip-cloud-checks && tsx scripts/generate-ics.ts && tsx scripts/generate-search-index.ts && next build",
        "start": "tinacms build && next start",
        "lint": "eslint .",
        "export": "pnpm run build && next-image-export-optimizer && node scripts/inline-css.mjs",
        "release:dry-run": "semantic-release --dry-run --no-ci --branches $(git branch --show-current) --plugins @semantic-release/commit-analyzer",
        "serve": "npx serve@latest out",
        "test": "vitest",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:all": "pnpm test --run && pnpm test:e2e",
        "test:report": "npx serve test-results",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,md,mdx,json}": "prettier --write",
        "*.{js,jsx,ts,tsx}": "eslint --fix"
    },
    "dependencies": {
        "@fullcalendar/core": "^6.1.20",
        "@fullcalendar/daygrid": "^6.1.20",
        "@fullcalendar/list": "^6.1.20",
        "@fullcalendar/react": "^6.1.20",
        "@fullcalendar/timegrid": "^6.1.20",
        "@mdx-js/loader": "^3.1.1",
        "@mdx-js/react": "^3.1.1",
        "@next/mdx": "^16.1.1",
        "@types/mdx": "^2.0.13",
        "fuse.js": "^7.1.0",
        "gray-matter": "^4.0.3",
        "ics": "^3.8.1",
        "image-size": "^2.0.2",
        "next": "^16.1.1",
        "next-image-export-optimizer": "^1.19.0",
        "next-mdx-remote": "^5.0.0",
        "next-themes": "^0.4.6",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-icons": "^5.5.0",
        "react-photo-album": "^3.4.0",
        "react-select": "^5.10.2",
        "rehype-img-size": "^1.0.1",
        "remark-frontmatter": "^5.0.0",
        "remark-gfm": "^4.0.1",
        "sharp": "^0.34.5",
        "tinacms": "^3.1.2",
        "webpack": "^5.104.1",
        "yet-another-react-lightbox": "^3.28.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@next/eslint-plugin-next": "^16.1.1",
        "@playwright/test": "^1.57.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^7.1.0",
        "@semantic-release/git": "^10.0.1",
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/typography": "^0.5.19",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@tinacms/cli": "^2.0.5",
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/coverage-v8": "^0.34.6",
        "@vitest/ui": "^0.34.6",
        "autoprefixer": "^10.4.23",
        "eslint": "^9.39.2",
        "eslint-config-next": "16.1.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jsdom": "^27.3.0",
        "lint-staged": "^16.2.7",
        "monocart-reporter": "^2.9.23",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "semantic-release": "^25.0.2",
        "tailwindcss": "^4.1.18",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "vite": "^4.5.14",
        "vitest": "^0.34.6"
    },
    "pnpm": {
        "overrides": {
            "jsonpath-plus": "10.3.0",
            "dompurify": "3.2.4",
            "mermaid": "10.9.3",
            "esbuild": "0.25.0",
            "vite": "4.5.14"
        }
    }
}
